---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card flex">
	<a href={href} class="bg-card p-4 opacity-80 w-full rounded-md">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="mt-3 mb-0">
			{body}
		</p>
	</a>
</li>
