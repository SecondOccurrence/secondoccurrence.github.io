---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="w-full flex justify-self-center">
	<a href={href} class="p-4 w-full bg-card opacity-80 rounded-md">
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="mt-3 mb-0">
			{body}
		</p>
	</a>
</li>
